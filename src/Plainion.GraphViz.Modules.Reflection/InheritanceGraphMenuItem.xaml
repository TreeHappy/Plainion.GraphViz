<MenuItem x:Class="Plainion.GraphViz.Modules.Reflection.InheritanceGraphMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:pn="http://github.com/ronin4net/plainion"
             xmlns:v="clr-namespace:Plainion.GraphViz.Modules.Reflection"
             mc:Ignorable="d" 
             Header="Inheritance graph ..."
             Command="{Binding OpenInheritanceGraphBuilderCommand}">
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding InheritanceGraphBuilderRequest, Mode=OneWay}">
            <prism:PopupWindowAction IsModal="False" prism:RegionManager.RegionName="{x:Static v:RegionNames.InheritanceGraphBuilder}"/>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
</MenuItem>
