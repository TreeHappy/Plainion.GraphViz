<MenuItem x:Class="Plainion.GraphViz.Modules.Editor.DotLangEditorMenuItem"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
          xmlns:prism="http://www.codeplex.com/prism"
          xmlns:pn="http://github.com/ronin4net/plainion"
          xmlns:l="clr-namespace:Plainion.GraphViz.Modules.Editor"
          Header="DOT language editor ..."
          Command="{Binding OpenDotLangEditorCommand}">
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding DotLangEditorRequest, Mode=OneWay}">
            <pn:PopupViewAction IsModal="False" prism:RegionManager.RegionName="{x:Static l:RegionNames.DotLangEditor}"
                                WindowWidth="500" WindowHeight="600"/>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
</MenuItem>
